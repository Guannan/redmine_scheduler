<% form_tag (:action => 'index', :method => "get") do %>
  <p><%= label_tag 'Appointment Time (hour): ' %><%= select_hour @hour, :prompt => 'Choose hour' %></p>
  <p><%= label_tag 'Appointment Time (min): ' %><%= select_minute @minute, :prompt => 'Choose minute' %></p> 
  
  <!--method 2-->
  <p><%= label_tag 'Select Date' %><%= select_date @date, :prompt => ' ' %></p>
  <p><%= label_tag 'Select Start Time' %><%= select_tag (:sel_time, options_for_select(@time)) %></p>

  <p><%= label_tag 'Select Date Time' %><%= select_datetime @datetime, :prompt => ' ' %></p><!--not displaying quarter hour easily-->
  <%= submit_tag("Search") %>
<%end%>