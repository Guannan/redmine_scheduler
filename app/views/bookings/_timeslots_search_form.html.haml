= form_tag({}, method: 'get', remote: true, update: 'results') do
  %p
    = label_tag :from, 'from'
    = select_datetime @from, :prefix => :from
  %p
    = label_tag :until, 'until'
    = select_datetime @until, :prefix => :until
  %p
    = label_tag :coach_ids
    - @all_coaches.each do |coach|
      = label_tag coach.name
      = check_box_tag 'coach_ids[]', coach.id, @coaches.include?(coach) ? true : false
  %p
    = label_tag :skill_ids
    - @all_skills.each do |skill|
      = label_tag skill.name
      = check_box_tag 'skill_ids[]', skill.id, @skills.include?(skill) ? true : false
  %p
    = submit_tag "Search"