<%= render 'nav/nav' %>
<h2>Student Skill Levels</h2>

<% @students.each do |student| %>
  <h4><%= student.name %> : <%= link_to 'Assign Training Goal...', {:controller => 'issues', :action => 'new', :issue => {:project_id => @training_project.id, :assigned_to_id => student} } %></h4>

  <div id="student-levels">
    <table>
      <tr><th>Skill/Auth</th><th>Level</th><th>Updated</th></tr>
      <% student.levels.sort_by(&:rating).each do |level| %>
        <tr>
          <td><%= level.skill.name %></td><td><%= level.rating %></td><td><%= level.updated_at.strftime("%D") %></td>
        </tr>
      <% end %>
    </table>
  </div>
  
  <% if !@goals_by_student[student].nil? %>
    <h5>Goals:</h5>
      <div id="student-goals">
        <table>
          <tr><th>Goal</th><th>Assigned By</th><th>Assigned</th></tr>
          <% @goals_by_student[student].each do |goal| %>
            <tr><td><%= link_to goal.subject, goal %></td><td><%= link_to goal.author.name, goal.author %></td><td><%= goal.created_on.strftime("%D") %></td></tr>
          <% end %>
        </table>
      </div>
  <% end %>


  <hr>
<% end %>

<% content_for :header_tags do %>
    <%= stylesheet_link_tag 'prostaff', :plugin => 'redmine_scheduler' %>
<% end %>