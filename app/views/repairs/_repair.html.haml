%table
  %tr
    %td Submitted By:
    %td= repair.user.name
  %tr
    %td Item Number
    %td= repair.item_number
  %tr
    %td Item Description
    %td= repair.item_desc
  %tr
    %td Problem Description
    %td= repair.problem_desc
  - if repair.patron_name.present?
    %tr
      %td Patron Name
      %td= repair.patron_name
    %tr
      %td Patron Phone
      %td= repair.patron_phone
    %tr
      %td Patron Email
      %td= repair.patron_email
    %tr
      %td Patron JHED:
      %td= repair.patron_jhed
    %tr
      %td Checkout #:
      %td= repair.checkout
%p Notes (Not visible to Patron):
%p= repair.notes
