<h2>Skills</h2>

<%= render 'form' %><%= link_to 'Edit Categories', {:controller => 'skillcats', :action => 'index'} %>
  <% Skillcat.all.each do |skillcat| %>
    <h3><%= skillcat.name %></h3>
      <ul>
		<% skillcat.skills.each do |skill| %>
		  <li>
		  <%= skill.name %>: <%= link_to 'Edit', {:action => 'edit', :id => skill.id} %>, <%= link_to 'Delete', {:action => 'destroy', :id => skill.id}, :confirm => 'Delete skill? All associated users will lose it.' %>
		  </li>
		<% end %>
    </ul>
  <% end %>
