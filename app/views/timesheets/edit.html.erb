<h2>Timesheets edit</h2>

<% form_tag do %>
<%= select_year Date.new(@year) %>
<%= select_tag :tweek, options_for_select(@weeks) %> 

<%= submit_tag "Update"%>
<%end%>

<br>
<ul>
	<% (0..6).each do |i|%>
	  <% day = (@weekof + i.days) %>
	  <% entries = @entries_by_day[i] %>
	<li>
		<%= day.strftime("%A - %D") %>
	  	<%= entries.inject(0) {|sum, x| sum + x.hours} %>
	</li>
</ul>
</br>
<%end%>