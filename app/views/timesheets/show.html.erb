<%= render 'nav/nav' %>
<div>
  <table class="list issues">
    <% @total = 0 %>
    <h3>Shifts and Time Entries Sorted by Day</h3>
    <tr>
      <th>Day</th>
      <th>Date</th>
      <th>Task</th>
      <th># Hours Worked</th>
    </tr>
    <% (1..7).each do |day| %><!--can't be 0 to 6, Date.commercial doesn't take 0-->
      <% date = Date.commercial(@year_selected, @cweek, day) %>
      <%= render 'time_entries', {:entries_by_day=>@entries_by_day, :date=>date} %>
    <%end%>
    
    <tr><td></td><td></td><td></td><td></td></tr>

    <tr><td></td><td></td><td>Total # of Hours Worked:</td><td><%= @total %></td><tr>
    <tr><td></td><td></td><td>
      <% if @timesheet.approved.present? %> 
        Amount Paid
      <% else %> 
        Wage
      <% end %>
    </td><td>$
        <%= @wage %>
  </table>
</div>