<% form_tag(:action => 'find', :method => "get") do %>
  <p><%= label_tag 'From' %><%= select_date @from, :prefix => :from %></p>
  <p><%= label_tag 'To' %><%= select_date @to, :prefix => :to %></p>

  <h3>Include Staff:</h3>

  <% @coaches.each do |coach| %>
    <p><%= check_box_tag 'coach_ids[]', coach.id, @coaches_selected.include?(coach) %><%= label_tag coach.name %></p>
  <% end %>

  <h3>Restrict to Staff with Skills:</h3>

  <% @skillcats.each do |cat| %>
    <h4><%= cat.name %></h4>
    <% skill_names = [] %>
    <% cat.skills.each do |skill| %>
      <% skill_names << skill.name %> 
    <% end %>
    <%= select_tag (:sel_skills, options_for_select(skill_names.insert(0,"")) ) %>
  <% end %>

  <% @skillcats.each do |cat| %>
    <h4><%= cat.name %></h4>
    <% cat.skills.each do |skill| %>
      <p><%= check_box_tag 'skill_ids[]', skill.id, @skills_selected.include?(skill) %><%= label_tag skill.name %></p>
    <% end %>
  <% end %>

  <%= submit_tag("Search") %>
<% end %>