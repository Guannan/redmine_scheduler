<script>
function CheckAll(){
	var coaches = document.getElementById("coach selection");
	
	//coaches.("input[type='checkbox']").prop("checked", true);

	coaches.style.color="red";
	
	//alert(coaches.length);
	for (i=0;i<coaches.length;i++){
		coach_ids[i].checked = true;
	}
}

</script>

<% form_tag(:action => 'find', :method => "get") do %>
  <p><%= label_tag 'From' %><%= select_date @from, :prefix => :from %></p>
  <p><%= label_tag 'To' %><%= select_date @to, :prefix => :to %></p>

  <h3>Include Staff:</h3>

  <div id="coach selection">
  <% @coaches.each do |coach| %>
    <p id="coach names"><%= check_box_tag 'coach_ids[]', coach.id, @coaches_selected.include?(coach) %>
    	<%= label_tag coach.name %>
    </p>
  <% end %>
  </div>
  
  <br><%= check_box_tag 'all_coaches toggle',1, false, :onclick => "Element.toggle('coach selection')"%>
  <!--toggling is so much fun!!-->
    	<%= label_tag 'toggle names' %>
    </br>

  <br><%= check_box_tag 'all_coaches select',1, false, :onclick => "CheckAll()" %>
    	<%= label_tag 'select all' %>
    </br>

  <h3>Restrict to Staff with Skills:</h3>

  <%= select_tag (:sel_skill, options_for_select(@skills_list, @skill_choice)) %>
  <%= submit_tag("Search") %>
<% end %>