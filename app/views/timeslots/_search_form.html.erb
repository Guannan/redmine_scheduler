<script>
function checkall(){
	var cb_array = new Array();
  cb_array = document.getElementsByClassName('name_checkboxes');
  
  
  for (var i=0;i<cb_array.length;i++){
      //cb_array[i].checked = !cb_array[i].checked;  //does toggling instead of selecting all
      cb_array[i].checked = true;
  }
}

</script>

<%= form_tag(:action => 'find', :method => "get") do %>
  <p><%= label_tag 'From' %><%= select_date @from, :prefix => :from %></p>
  <p><%= label_tag 'To' %><%= select_date @to, :prefix => :to %></p>

  <h3>Include Staff:</h3>

  <div class="coach_selection">
  <% @coaches.each do |coach| %>
    <p><%= check_box_tag 'coach_ids[]', coach.id, @coaches_selected.include?(coach), :class=>'name_checkboxes' %>
    	<%= label_tag coach.name %>
    </p>
  <% end %>
  </div>

  <!--somehow button_tag is not recognized as a method, so using HTML code for now...!-->
  <button name="sel_all" type="button" onclick="checkall()">Select All</button>

  <h3>Restrict to Staff with Skills:</h3>

  <%= select_tag(:sel_skill, options_for_select(@skills_list, @skill_choice)) %>
  <%= submit_tag("Search") %>
<% end %>
