<h2>Find a Timeslot</h2>

<%= render 'search_form' %>

<% dates(@from,@to).each do |date| %>
  <% unless @shifts.by_start_date(date).empty? %>
    <h3><%= date.strftime("%D") %></h3>
  <% end %>

  <% @shifts.by_start_date(date).each do |shift| %>
    <%= render 'shift', :shift => shift unless shift.end_time <= DateTime.now %>
  <% end %>

<% end %>
