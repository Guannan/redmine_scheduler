<% render 'nav/nav' %>
<h2>Wages</h2>

<ul>
  <% @users.each do |user| %>
    <li><%= user.name %>
    <% if user.wage.present? %>
        <% form_for(:wage, user.wage, :url => { :action => "update", :id => user.wage }) do |f| %>
          <%= f.text_field :amount %>
        <%= submit_tag "Update" %>
      <% end %>
    <% else %>
      <% form_for(:wage, @wage, :url => { :action => "create", :user_id => user }) do |f| %>
        <%= f.text_field :amount %>
        <%= submit_tag "Assign" %>
      <% end %>
    <% end %>
  </li>
  <% end %>
</ul>
